<script>
// Generate 10 rows
const tbody=document.getElementById("itemsBody");
for(let i=1;i<=10;i++){
  tbody.innerHTML+=`
  <tr>
    <td style="text-align:center">${i}</td>
    <td><input type="text" style="width:100%; border:0;"></td>
    <td><input type="number" class="price" value="0" style="width:100%;border:0;text-align:right;"></td>
    <td><input type="number" class="qty" value="0" style="width:100%;border:0;text-align:right;"></td>
    <td style="text-align:right;"><span class="line-total">0.00</span></td>
  </tr>`;
}

// Auto Invoice No + Date
function setInvoiceInfo(){
  const d=new Date();
  const no=`AMMA-${d.getFullYear().toString().slice(-2)}${String(d.getMonth()+1).padStart(2,'0')}${String(d.getDate()).padStart(2,'0')}-${String(d.getHours()).padStart(2,'0')}${String(d.getMinutes()).padStart(2,'0')}${String(d.getSeconds()).padStart(2,'0')}`;
  document.getElementById("invNumber").textContent=no;
  document.getElementById("invDate").textContent=d.toISOString().slice(0,10);
}
setInvoiceInfo();

// Calculation
function recalc(){
  let subtotal=0;
  document.querySelectorAll("#itemsBody tr").forEach(row=>{
    const p=parseFloat(row.querySelector('.price').value)||0;
    const q=parseFloat(row.querySelector('.qty').value)||0;
    const line=p*q;
    row.querySelector('.line-total').textContent=line.toFixed(2);
    subtotal+=line;
  });

  document.getElementById("subTotal").textContent=subtotal.toFixed(2);
  const tax=parseFloat(document.getElementById("taxPercent").value)||0;
  const final=subtotal+(subtotal*(tax/100));
  document.getElementById("finalTotal").textContent=final.toFixed(2);
}

document.addEventListener("input", recalc);
recalc();
</script>

